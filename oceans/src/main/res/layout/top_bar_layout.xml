<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="@dimen/top_bar_height"
    android:layout_width="match_parent"
    android:id="@+id/top_bar_relative"
    android:background="@color/colorTopBarBg"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <ImageView
        android:id="@+id/iv_finish"
        android:paddingLeft="@dimen/page_padding"
        android:paddingRight="@dimen/page_padding"
        android:src="@mipmap/return_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />
    <TextView
        android:id="@+id/tv_center"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:singleLine="true"
        tools:text="标题"
        android:focusableInTouchMode="true"
        android:ellipsize="marquee"
        android:textColor="@color/topbarCenterTextColor"
        android:textSize="17sp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/iv_right_add"
        android:paddingRight="3dp"
        android:paddingLeft="@dimen/page_padding"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/iv_right"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/iv_right"
        android:paddingRight="15dp"
        android:paddingLeft="@dimen/page_padding"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />
    <TextView
        android:id="@+id/tv_right"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:paddingRight="@dimen/page_padding"
        android:paddingLeft="@dimen/page_padding"
        android:gravity="center_vertical"
        android:layout_height="match_parent" />
</RelativeLayout>