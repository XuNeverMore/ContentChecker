<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_top"
    android:background="@color/colorTheme"
    android:layout_width="match_parent"
    android:layout_height="@dimen/top_bar_height">

        <ImageView
            android:id="@+id/iv_finish"
            android:paddingLeft="@dimen/page_padding"
            android:paddingRight="@dimen/page_padding"
            android:src="@mipmap/return_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <EditText
            android:id="@+id/edt_search"
            android:imeOptions="actionSearch"
            android:layout_toRightOf="@+id/iv_finish"
            android:layout_toLeftOf="@+id/tv_right"
            android:background="@drawable/rect_search"
            android:layout_marginLeft="@dimen/dp10"
            android:drawableLeft="@mipmap/search_small"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:drawablePadding="@dimen/dp10"
            android:paddingLeft="@dimen/dp10"
            android:singleLine="true"
            android:textSize="15sp"
            android:textColorHint="#f3f3f3"
            android:hint="搜索产品"
            android:textColor="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="32dp" />

    <TextView
        android:id="@+id/tv_right"
        android:text="搜索"
        android:textSize="15sp"
        android:paddingLeft="@dimen/page_padding"
        android:textColor="@color/colorWhite"
        android:gravity="center_vertical"
        android:paddingRight="@dimen/page_padding"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />
</RelativeLayout>